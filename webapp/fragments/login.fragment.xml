<core:FragmentDefinition xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog resizable="true" title="Fill the user Details" id="idDialogSignUp">
        <beginButton>
            <Button  text="SignUp" press="onDialogSave" type="Accept"></Button>
        </beginButton>
        <endButton>
            <Button text="close" press="onDialogClose" type="Back"></Button>
        </endButton>
        <form:SimpleForm backgroundDesign="Transparent">
            <Label text="Name*"/>
            <Input id="idDialogName"/>
            <Label text="phone Number*"/>
            <Input id="idDialogNumber" type="Number"></Input>
            <Label text="Email-optional"/>
            <Input id="idDialogEmail" type="Email" tooltip="Optional"/>
            <Label text="Password"/>
            <Input id="idDialogPass" type="Password"/>
            <Label text="confirm Password" />
            <Input id="idDialogConfirm" type="Password"/>
        </form:SimpleForm>
    </Dialog>
</core:FragmentDefinition>